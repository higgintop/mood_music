#!/usr/bin/env ruby

require 'highline/import'

menu_prompt= <<EOS
1. Add song recommendation
2. List song recommendations
3. Exit
EOS


if ARGV.length < 1
  puts "[Help] Run as: ./mood_music manage"
elsif ARGV.length == 1
  if ARGV[0] == 'manage'
    choose do |menu|
      menu.choice('Add song recommendation') {say("")}
      menu.choice('List song recommendations') {say("No recommendations found.  Add a recommendation.")}
      menu.choice('Exit') {say ("Peace Out!")}
    end
  end
end
